# Production Environment Variables for teen-titans.vercel.app

# NextAuth Configuration
NEXTAUTH_SECRET=your_production_secret_here
NEXTAUTH_URL=https://teen-titans.vercel.app

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=wss://learnos-websocket-server.onrender.com

# Database URL (Use your production database)
DATABASE_URL="your_production_database_url_here"

# Google OAuth (if using Google login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (if using email login)
EMAIL_SERVER_HOST=your_email_host
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email_user
EMAIL_SERVER_PASSWORD=your_email_password
EMAIL_FROM=noreply@teen-titans.vercel.app

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UNSIGNED_PRESET=your_upload_preset

# Vapi Configuration (if using voice features)
NEXT_PUBLIC_VAPI_PUBLIC_KEY=your_vapi_public_key
NEXT_PUBLIC_VAPI_ASSISTANT_ID=your_vapi_assistant_id

# Google AI Configuration
GOOGLE_AI_API_KEY=your_gemini_api_key

# Google Cloud Vision API Configuration (PRODUCTION - Use JSON string, not file path)
# IMPORTANT: Copy the entire content of your google-credentials.json file as a single line
# Remove all newlines and format it as one long string
GOOGLE_APPLICATION_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key_id":"key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"}

# Alternative: Use API Key Only (Simpler but less secure)
# GOOGLE_AI_API_KEY=your_gemini_api_key_for_vision_fallback

# Vapi Configuration (for voice conversations)
# Get these from your Vapi dashboard at https://vapi.ai
NEXT_PUBLIC_VAPI_PUBLIC_KEY=pk_your_vapi_public_key_here
NEXT_PUBLIC_VAPI_ASSISTANT_ID=your_vapi_assistant_id_here

# Google AI (Gemini) - for text-based interactions
# Get this from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Google Cloud Vision API Credentials
# LOCAL DEVELOPMENT: Use file path
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-credentials.json

# PRODUCTION DEPLOYMENT: Use JSON string (copy entire credentials file content)
# Remove all newlines and format as one long string
# GOOGLE_APPLICATION_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key_id":"key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"}

# Cloudinary Configuration (for profile image uploads)
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UNSIGNED_PRESET=your_upload_preset_name

# NextAuth Configuration
# Generate a random string for production
NEXTAUTH_SECRET=your_nextauth_secret_here
# For production, use your deployed URL
NEXTAUTH_URL=https://teen-titans.vercel.app
# For local development, use localhost
# NEXTAUTH_URL=http://localhost:3000

# WebSocket Configuration
# Production WebSocket server
NEXT_PUBLIC_WEBSOCKET_URL=wss://learnos-websocket-server.onrender.com
# Local development WebSocket server
# NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# Database URL (REQUIRED for Prisma)
DATABASE_URL="postgresql://username:password@localhost:5432/teen_titans"
